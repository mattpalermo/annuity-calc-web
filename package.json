{
	"name": "annuity-calc-web",
	"version": "0.0.0",
	"description": "Simple annuity calculator web app",
	"private": true,
	"main": "src/app.js",
	"scripts": {
		"start": "node bin/www",
		"prepublish": "npm run prepare",
		"prepare": "npm run build",
		"watch": "gulp watch",
		"build": "gulp build",
		"clean": "gulp clean",
		"test": "npm run test-node && npm run test-browser",
		"test-node": "mocha ./src/**/*.spec.js ./test/*.js",
		"test-browser": "karma start ./karma.conf.js --single-run",
		"lint": "npm run lint:scripts && npm run lint:styles && npm run lint:pug",
		"lint:scripts": "eslint ./*.js ./src/**/*.js",
		"lint:styles": "stylelint src/**/*.css",
		"lint:doiuse": "stylelint --config stylelint-doiuse.config.js src/**/*.css",
		"lint:pug": "pug-lint -c pug-lintrc.js src/view.pug"
	},
	"keywords": [
		"annuity",
		"calculator",
		"web",
		"app"
	],
	"author": "Matthew Palermo",
	"license": "ISC",
	"dependencies": {
		"dashdash": "^1.14.1",
		"express": "^4.14.0",
		"morgan": "^1.7.0",
		"pug": "^2.0.0-beta6"
	},
	"devDependencies": {
		"babel-core": "^6.21.0",
		"babel-loader": "^6.2.10",
		"babel-preset-es2015": "^6.18.0",
		"browser-sync": "^2.18.5",
		"chai": "^3.5.0",
		"cssnano": "^3.9.1",
		"del": "^2.2.2",
		"eslint": "^3.12.2",
		"gulp": "^3.9.1",
		"gulp-nodemon": "^2.2.1",
		"gulp-postcss": "^6.2.0",
		"gulp-rename": "^1.2.2",
		"gulp-sourcemaps": "^1.9.1",
		"gulp-util": "^3.0.8",
		"karma": "^1.3.0",
		"karma-chrome-launcher": "^2.0.0",
		"karma-mocha": "^1.3.0",
		"karma-spec-reporter": "0.0.26",
		"karma-webpack": "^1.8.1",
		"mocha": "^3.2.0",
		"postcss-cssnext": "^2.9.0",
		"pug-lint": "^2.3.0",
		"selenium-webdriver": "^3.0.1",
		"stylelint": "^7.7.0",
		"stylelint-config-standard": "^15.0.1",
		"webpack": "^1.14.0"
	}
}
